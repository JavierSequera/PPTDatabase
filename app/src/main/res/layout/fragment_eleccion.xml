<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/purple_500"
    tools:context=".EleccionFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Selecciona un objeto"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        />
    <ImageButton
        android:id="@+id/botonpiedra"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/piedra"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center|left"
        />
    <ImageButton
        android:id="@+id/botonpapel"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/papel"
        android:layout_gravity="center"
        />

    <ImageButton
        android:id="@+id/botontijeras"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center|right"
        android:layout_marginRight="30dp"
        android:background="@drawable/tijeras" />

    <TextView
        android:id="@+id/ronda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        />

    <Button
        android:layout_width="155dp"
        android:layout_height="35dp"
        android:id="@+id/botonFP"
        android:text="Finalizar partida"
        android:textSize="11dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="7dp"
        tools:ignore="RtlCompat" />

</FrameLayout>